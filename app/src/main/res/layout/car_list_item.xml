<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/carItemsListLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="2dp">

    <TableRow
        android:id="@+id/tblRowCarItemContainer"
        android:layout_width="match_parent"
        android:weightSum="20"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtViewCarItemHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="13"
            android:gravity="start"
            android:paddingBottom="20dp"
            android:paddingLeft="10sp"
            android:text="@string/global_placeholder"
            android:textAlignment="viewStart"
            android:textSize="16sp" />

        <TextSwitcher
            android:id="@+id/txtSwitcherCarItemValue"
            android:layout_weight="5"
            android:layout_width="0sp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:layout_gravity="bottom"
                android:gravity="bottom|end"
                android:maxLength="7"
                android:paddingBottom="5sp"
                android:selectAllOnFocus="true"
                android:textColor="#000"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:layout_gravity="bottom"
                android:gravity="bottom|end"
                android:maxLength="7"
                android:paddingBottom="5sp"
                android:selectAllOnFocus="true"
                android:textColor="#000"
                android:textSize="14sp"/>
        </TextSwitcher>

        <TextView
            android:id="@+id/txtMileAbbreviation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="bottom|start"
            android:paddingBottom="5sp"
            android:paddingLeft="5sp"
            android:text="@string/settings_mi" />
    </TableRow>
</LinearLayout>